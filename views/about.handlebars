  width: 300px;
  text-align: center;
  font-family: arial;
  background-color: #f5f5f5;
  padding: 20px;
  transition: transform 0.3s ease;
  margin-bottom: 20px;
}


.card img {
  width: 200px;
  height: 200px;
  border-radius: 10px;
  display: block;
  margin: 0 auto;
}


.card:hover {
  transform: translateY(-10px);
}



.card h3 {
  font-size: 24px;
  margin-bottom: 10px;
}

.card p {
  font-size: 16px;
  margin-bottom: 10px;
